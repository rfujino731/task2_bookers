<h2>user一覧画面</h2>

<%= attachment_image_tag @user, :profile_image, size: "300x300", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
<p>name</p>
<%= @user.name %>


<p>introduction</p>
<%= @user.introduction %>

<% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>



<% @users.each do |user| %>
<table>
	<tr>
		<th>name</th>
		<th>tintroduction</th>
	</tr>
	<tr>
		<th><%= user.name %></th>
		<th><%= user.introduction %></th>
		<th><%=link_to "show", user_path(user.id) %></th>
		
	</tr>
<% end %>
</table>