<h2>User info</h2>
<h3>mypage編集画面の予定</h3>


<%= form_for(@user) do |f| %>
	<p>name</p>
	<%= f.text_field :name, autofocus: true %>
	<%= f.submit "変更を保存" %>

	<p>image(プロフィール画像)</p>
	 <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
	 <%= f.submit "変更を保存" %>


	<p>introduction</p>
	<%= f.text_area :introduction, autofocus: true  %>
	<%= f.submit "変更を保存" %>


<% end %>
