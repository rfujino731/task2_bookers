<% if notice %>
	<p><%= notice %></p>
<% end %>
<% if alert %>
   <p><%= alert %></p>
<% end %>

<h2>usersのshow画面</h2>
<h3>mypageの予定</h3>

<%= attachment_image_tag @user, :profile_image, size: "300x300", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
<p>name</p>
<%= @user.name %>


<p>introduction</p>
<%= @user.introduction %>

<% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>



<h2 class = "new_title">new book</h2>
	<%= form_for(@book) do |f| %>

		<h4>title</h4>
		<%= f.text_field :title %>

		<h4>body</h4>
		<%= f.text_area :body %>

		<br>
		<%= f.submit 'Create Book' %>
	<% end %>


	<h3>自分が投稿したbook一覧</h3>
	<% @books.each do |book| %>

	<tr>
		<%= attachment_image_tag @user, :profile_image, size: "30x30", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
		<th class = "books_table_date"><%= book.title %></th>
		<th class = "books_table_date"><%= book.body %></th>
		<th class = "books_table_link"><%=link_to "show", book_path(book.id) %></th>
		<th class = "books_table_link"><%= link_to "edit",edit_book_path(book.id) %></th>
	</tr>
		
	<% end %>