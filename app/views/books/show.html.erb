<div class = "container">

<p><%= notice %></p>


<div class = "row">
	<div class = "col-xs-3">
		<%= render 'layouts/sidbar', user:@user,book:@book %>
	</div>


<h2>Book detail</h2>
<div class = "col-xs-9">
		<table class = "table">
			<tbody>
				<tr>
					<td>
					<%= link_to attachment_image_tag( @user, :profile_image, size: "50x50", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"), user_path(@user) %>
						<br>
						<br>
						<br>
						<%= link_to @user.name,user_path(@user) %>

					</td>
					<td><%= @book.title %></td>
					<td><%= @book.body%></td>

					<% if  @user.id == current_user.id %>
					<td><%=link_to "Edit", edit_book_path(@book.id) %></td>
					<td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "Are you sure?" } %></td>
					<% end %>
				</tr>
				</tbody>
		</table>

</div>
</div>
</div>

