<!DOCTYPE html>
<html>
  <head>
    <title>Task2Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class = "header_main">
   <nav class = "navbar navbar-fixed-top navbar-inverse">
    <div class = "container">
      <div class = "row">
        <div class = "navbar navbar-nav navbar-left">
          <span class = "header_title">Bookers</span>
        </div>
        <ul class = "nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <!-- link_toのshowへのpathはshowと書かない
              editの場合は、edit_user_pathになる -->
                <%= link_to ' home', user_path(current_user.id),class:"glyphicon glyphicon-home home" %>
              </li>
              <li>
                <%= link_to ' users', users_path, class:"glyphicon glyphicon-user users"%>
              </li>
              <li>
                <%= link_to ' books', books_path,  class:"glyphicon glyphicon-book books" %>
            </li>

            <li>
               <%= link_to " logout", destroy_user_session_path, method: :delete,  class:"glyphicon glyphicon-log-out logout" %>
            </li>
          </ul>
          <% else %>
            <ul class = "nav navbar-nav navbar-right">
              <li>
                <%= link_to " home", show_home_path, class:"glyphicon glyphicon-home home" %>
              </li>

              <li>
                <%= link_to " about", about_home_path, class:"glyphicon glyphicon-link abouts" %>
              </li>

              <li>
                <%= link_to " sing up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up"  %>
               </li>
                <li class="">
                <%= link_to " log in",  new_user_session_path, class:"glyphicon glyphicon-log-in sign-in"  %>
                </li>
              </ul>
          <% end %>
        </div>
      </div>
    </nav>
  </header>
<br>
<br>
<br>
<%= yield %>

<footer>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-9"></div>
        <div class = "col-lg-3">
          <p>CopyRight Intratop.inc</p>
        </div>
      </div>
  </div>
</footer>
</body>
</html>

