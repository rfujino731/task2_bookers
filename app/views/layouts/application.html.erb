<!DOCTYPE html>
<html>
  <head>
    <title>Task2Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <div class = "container">
      <div class = "navbar navbar-expand-md navbar-dark bg-dark">
        <span class = "header_title_bookers">Bookers</span>
      

        <nav>
        <ul class = "header_nav">
        <% if user_signed_in? %>
           <li class="header_navi_item">

              <!-- link_toのshowへのpathはshowと書かない
              editの場合は、edit_user_pathになる -->
              <%= link_to 'home', user_path(current_user.id) %>
            </li>
            <li class="header_item">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
              <%= link_to 'users', users_path %>
            </li>
            <li class = "header_item">
              <%= link_to 'books', books_path %>
            </li>

            <li class="header_item">
               <%= link_to "logout", destroy_user_session_path, method: :delete %>
            </li>

        <% else %>
      </nav>
        <nav>
            <li class="">
                <%= link_to "home", show_home_path %>
            </li>

            <li class="">
                <%= link_to "about", about_home_path %>
            </li>

            <li class="">
                <%= link_to "sing up", new_user_registration_path %>
            </li>
            <li class="">
                <%= link_to "log in",  new_user_session_path %>
            </li>
          <% end %>
          </ul>
        </nav>
    </div>
  </div>
  </header>
    </body>

    <%= yield %>
 
<footer>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-9"></div>
        <div class = "col-lg-3">
          <p>CopyRight Intratop.inc</p>
        </div>
      </div>
  </div>
</footer>
</html>

